<%- include('partials/header') -%>

  <!-- main -->
  <section class="section container blue lighten-5" id="main">
    <form id="examForm">
      <div class="row">
        <div class="col s12 m10 l8">
          <div id="coverPage">
            <h6>Exam Cover Page</h6>
            <label>
              <input type="checkbox" id="coverPageCheckBox" onChange="checkBoxChanged(this, 'coverPage');"/>
              <span>Include a cover page</span>
            </label>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col s12 m8 l6">
          <div id="questions">
            <h6>Select Questions</h6>
            <% if (mcQuestions.length === 0) { %>
              <p>No multiple-choice questions.</p>
            <% } else { %>
              <p>Multiple-choice questions:</p>
              <ul class="collection with-header">
                <% mcQuestions.forEach(q => { %>
                  <li class="collection-item"><div><%= q.question.name %><a href="#!" class="secondary-content">
                    <label>
                      <input type="checkbox" onChange="questionCheckBoxChanged(this, '<%= q.id %>', 'mc');"/><span></span>
                    </label>
                  </a></div></li> 
                <% }) %>
              </ul>
            <% } %>
            <% if (advQuestions.length === 0) { %>
              <p>No advanced questions.</p>
            <% } else { %>
              <p>Advanced questions:</p>
              <ul class="collection with-header">
                <% advQuestions.forEach(q => { %>
                  <li class="collection-item"><div><%= q.question.name %><a href="#!" class="secondary-content">
                    <label>
                      <input type="checkbox" onChange="questionCheckBoxChanged(this, '<%= q.id %>', 'adv');"/><span></span>
                    </label>
                  </a></div></li>         
                <% }) %>
              </ul>
            <% } %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col s12 m10 l8">
          <div id="appendix">
            <h6>Appendix</h6>
            <label>
              <input type="checkbox" id="appendixCheckBox" onChange="checkBoxChanged(this, 'appendix');"/>
              <span>Include an appendix</span>
            </label>
          </div>
        </div>  
      </div>
      <div class="row">
        <button class="btn waves-effect waves-light right" id="generate" type="submit"> <!-- disabled -->
          Generate<i class="material-icons right">send</i>
        </button> 
      </div> 
    </form>  
  </section>

   <!-- Options Modal -->
  <div id="optionsModal" class="modal modal-fixed-footer modal-not-dismissible dialog-modal">
    <div class="modal-content">
      <h4>Options</h4>
      <div id="optionsModalContent"></div>
    </div>
    <div class="modal-footer" id="optionsModalFooter">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat disabled" id="optionsModalRetry">RETRY</a>
      <a href="" class="modal-close waves-effect waves-green btn-flat disabled" id="optionsModalCreate">CREATE NEW</a>
      <a href="" class="modal-close waves-effect waves-green btn-flat disabled" id="optionsModalView">VIEW CREATED</a>
    </div>
  </div>

<%- include('partials/footer') -%>
<script src="exams-script.js"></script>
</body>
</html>